{
    "proxy": {
        "description": "代理地址（如 http://127.0.0.1:7890）",
        "type": "string",
        "default": "",
        "hint": "留空则不使用代理，支持 HTTP/HTTPS/SOCKS5 代理"
    },
    "timeout": {
        "description": "请求超时时间（秒）",
        "type": "int",
        "default": 30
    },
    "blur_level": {
        "description": "缩略图模糊程度（0-100，0为不模糊）",
        "type": "int",
        "default": 0,
        "hint": "数值越大模糊程度越高，超过50会添加马赛克效果"
    },
    "cache_cleanup_enabled": {
        "description": "是否自动清理缓存",
        "type": "bool",
        "default": true
    },
    "max_description_length": {
        "description": "描述最大显示长度",
        "type": "int",
        "default": 500
    },
    "max_tags_display": {
        "description": "最多显示标签数量",
        "type": "int",
        "default": 5
    }
}